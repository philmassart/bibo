{% extends 'base.html.twig' %}

{% block title 'Gérer les regions'%}

{% block body %}
    <div class="container mt-4">

        <h1>Gérer les regions</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>

        {% endfor %}


        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <h3>France</h3>
            {% for region in regions  %}
                {% if region.country == 1 %}
                    {{ include ('region/_list.html.twig') }}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>


        <table class="table table-striped">
            <tbody>
            <h3>Italie</h3>
            {% for region in regions  %}
                {% if region.country == 2 %}
                    {{ include ('region/_list.html.twig') }}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>


        <table class="table table-striped">
            <tbody>
            <h3>Espagne</h3>
            {% for region in regions  %}
                {% if region.country == 3 %}
                    {{ include ('region/_list.html.twig') }}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>

        <table class="table table-striped">
            <tbody>
            <h3>Chili</h3>
            {% for region in regions  %}
                {% if region.country == 4 %}
                    {{ include ('region/_list.html.twig') }}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>


                <div class="div text-right">
            <a href="{{ path('region.new') }}" class="btn btn-primary">Créer une nouvelle region</a>
        </div>
    </div>



{% endblock %}
