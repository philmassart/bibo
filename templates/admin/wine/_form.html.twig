{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.name) }}</div>
    <div class="col-md-4">{{ form_row(form.year) }}</div>
    <div class="col-md-4">{{ form_row(form.appellation) }}</div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.content) }}</div>
    <div class="col-md-2">{{ form_row(form.color) }}</div>
</div>
<div class="row">
    <div class="col-md-5">{{ form_row(form.country) }}</div>
    <div class="col-md-5">{{ form_row(form.region) }}</div>
    <div class="col-md-5">{{ form_row(form.stock) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer')}}</button>
{{ form_end(form) }}